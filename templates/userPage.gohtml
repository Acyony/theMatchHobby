<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>User Area</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<section class="container mt-4">
    <picture>
        {{if .Avatar}}
            <img src="/assets/uploadImage/{{.Avatar}}" alt="User Avatar" width="80">
        {{else}}
            <img src="/assets/uploadImage/generic-user.gif" alt="User Avatar" width="80">
        {{end}}
    </picture>


    <div class="card" style="width: 18rem;">


        <ul class="list-group list-group-flush">
            {{ if .Name}}
                <li class="list-group-item">Name: {{ .Name }}</li>
            {{ end }}

            {{ if .Email}}
                <li class="list-group-item">Email: {{ .Email }}</li>
            {{ end }}

            {{ if .Age}}
                <li class="list-group-item">Age: {{ .Age }} years</li>
            {{ end }}

            {{ range .Hobbies }}
                <li class="list-group-item">Hobby: {{ .Name }}</li>
            {{ end }}
        </ul>
        <div class="card-body">
            <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a>
        </div>
    </div>
</section>
</body>
</html>